import {
  core.file {close, open},
  core.file.flag,
  core.file.mode {default-file-mode},
  core.system {system},
  core.text.io {read, write},
}

define use-file(): system(unit) {
  try file = open("./test", core.file.flag.for-rw, default-file-mode) in
  try _ = write(file, "hey\n") in
  try _ = read(file, 1024) in
  close(file)
}

define main(): unit {
  match use-file() {
  | Right(_) =>
    Unit
  | Left(_) =>
    Unit
  }
}
