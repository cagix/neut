import {
- core.bool
- core.list => L
- core.text => T
}

variant stream-cell(a) {
- Nil
- Cons(a, stream(a))
}

inline stream(a: tau): tau {
  () -> stream-cell(a)
}

define append[a](xs: stream(a), ys: stream(a)): stream(a) {
  match xs() {
  - Nil =>
    ys
  - Cons(x1, rest) =>
    () => {
      Cons(x1, append(rest, ys))
    }
  }
}

define take[a](n: int, xs: stream(a)): stream(a) {
  if eq-int(n, 0) {
    () => { Nil }
  } else {
    match xs() {
    - Nil =>
      () => { Nil }
    - Cons(x, rest) =>
      () => {
        Cons(x, take(sub-int(n, 1), rest))
      }
    }
  }
}

define main(): unit {
  let my-stream: stream(int) =
    () => { Cons(1, () => { Nil }) }
  let _ = my-stream
  Unit
}
