define foo(FOO: bool, a: tau, 🌟🌟🌟: tau, 竹の葉に霰ふるなりさらさらに独りは寝べき心地こそせね: int): tau {
  let _ = 竹の葉に霰ふるなりさらさらに独りは寝べき心地こそせね in
  if FOO {
    a -> 🌟🌟🌟
  } else {
    🌟🌟🌟 -> tau
  }
}

define bar(a: tau, some-value: a): unit {
  let _ = some-value in
  Unit
}

define test-syntax(): unit {
  let _ =
    foo of {
    - a => int
    - FOO => True
    - 🌟🌟🌟 => list(void)
    - 竹の葉に霰ふるなりさらさらに独りは寝べき心地こそせね => {
        let x = 10 in
        let y = 20 in
        add-int(x, y)
      }
    }
  in
  let _ =
    foo of {
    - a => int
    - 🌟🌟🌟 => list(void)
    - FOO => False
    - 竹の葉に霰ふるなりさらさらに独りは寝べき心地こそせね => {
        let x = 10 in
        let y = 20 in
        add-int(x, y)
      }
    }
  in
  let _ =
    foo of {
    - 🌟🌟🌟 => list(void)
    - a =>
      foo of {
      - 竹の葉に霰ふるなりさらさらに独りは寝べき心地こそせね => {
          let x = 10 in
          let y = 20 in
          add-int(x, y)
        }
      - a => int
      - 🌟🌟🌟 => list(void)
      - FOO => True
      }
    - FOO => False
    - 竹の葉に霰ふるなりさらさらに独りは寝べき心地こそせね => {
        let x = 10 in
        let y = 20 in
        add-int(x, y)
      }
    }
  in
  let _ =
    // hole-notation + keyword arguments
    bar of {
    - a => _
    - some-value => tau
    }
  in
  Unit
}

define def-func-using-of of {
- arg-1: int
- arg-2: tau
